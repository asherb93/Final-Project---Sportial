<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Fragments.HomePageFragment"
        android:layout_width="match_parent"
        android:background="@color/blackTint"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/bungee"
                android:id="@+id/what_new_in_text"
                android:textSize="20sp"
                android:textColor="@color/cometchat_green_600"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's new in " />

            <TextView
                android:fontFamily="@font/bungee"
                android:textColor="@color/cometchat_green_600"

                android:id="@+id/sport_name_textview"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="@string/sport_name" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homepage_RV"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
